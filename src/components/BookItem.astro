---
export interface Props {
  id: string
  title: string
  img: string
}

const {
  id,
  title,
  img
} = Astro.props
---


<a
  class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl"
  href={`/${id}`}
>
  <img
    class="aspect-[221/343] h-full object-cover w-full max-w-full rounded-lg"
    alt={`Portada del libro ${title}`}
    src={img}
    style={`view-transition-name: book-${id}`}
  />
</a>